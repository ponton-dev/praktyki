<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ecb939">

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Witamy w AMW!"
        android:textColor="@color/black"
        android:textSize="100px" />


    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:text="Wprowadź dane logowania"
        android:textColor="@color/black"
        android:textSize="50px"></TextView>


    <EditText
        android:id="@+id/ed0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:width="580px"
        android:height="150px"
        android:hint="prefix"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="580px"
        android:layout_height="150px"
        android:layout_below="@id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250px"
        android:hint="login"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/txt3"
        android:layout_width="580px"
        android:layout_height="150px"
        android:layout_below="@id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430px"
        android:hint="hasło"
        android:password="true"
        android:textColor="@color/black" />

    <Button

        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="850px"
        android:text="Zaloguj" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:clickable="true"
        android:onClick="new_ac"
        android:text="brak konta? utwórz nowe"
        android:textColor="@color/black"
        android:textSize="50px"></TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img"
        android:layout_below="@id/reg"
        android:layout_marginTop="100px"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>