<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7"
    android:background="#0D41FF">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baza"
        android:layout_centerHorizontal="true"
        android:text="Wiadomości"
        android:textColor="@color/black"
        android:textSize="150px" />


    <Button
        android:layout_marginTop="300px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/baza"
        android:id="@+id/wyswietl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wyswietl" />

    <TextView
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="100px"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wyswietl"
        android:text="" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/powrot"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600px"
        android:text="POWRÓT" />
</RelativeLayout>