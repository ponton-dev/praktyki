<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#2E86C1"
    >

  <TextView
      android:id="@+id/panel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="PANEL STUDENTA"
      android:textColor="@color/black"
      android:textSize="100px" />

  <TextView
      android:layout_marginTop="70px"
      android:id="@+id/info"
      android:layout_centerHorizontal="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="Informacje o AMW"
      android:layout_below="@id/panel"
      android:textColor="@color/black"
      android:textSize="60px"
    />

  <TextView

      android:id="@+id/txt5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/info"
      android:layout_marginTop="23dp"
      android:gravity="center"
      android:text="Placówka nadzorowana jest przez Ministra Obrony Narodowej. Kształci podchorążych, oficerów oraz cywili na kierunkach związanych z nawigacją i mechaniką morską oraz obronnością. Wywodzi się z Tymczasowych Instruktorskich Kursów dla Oficerów, Oficerskiej Szkoły Marynarki Wojennej, Szkoły Podchorążych Marynarki Wojennej oraz Wyższej Szkoły Marynarki Wojennej."
      android:textColor="#F4D03F "
      android:textSize="55px" />

  <ImageSwitcher
      android:id="@+id/switcher"
      android:layout_width="450px"
      android:layout_height="450px"
      android:layout_below="@id/txt5"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="50px"></ImageSwitcher>

  <Button
      android:id="@+id/bt1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/switcher"
      android:layout_marginLeft="50px"
      android:text="NOWE ZDJĘCIE"></Button>

  <Button
      android:id="@+id/bt2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/switcher"
      android:layout_marginLeft="630px"
      android:text="-->"></Button>

  <TextView
      android:id="@+id/cofnij"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/bt1"
      android:layout_centerHorizontal="true"
      android:text="COFNIJ"
      android:textColor="@color/black"
      android:textSize="40px"></TextView>

</RelativeLayout>